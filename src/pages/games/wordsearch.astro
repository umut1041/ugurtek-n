<style>
  .breadcrumb {
    font-size: 0.9rem;
    color: #64748b;
    margin-bottom: 0.5rem;
  }
  .breadcrumb a:hover {
    color: #0f172a;
  }
  .wordsearch-game {
    margin: 1.5rem 0;
  }
  .wordsearch-header {
    margin-bottom: 1.5rem;
  }
  .wordsearch-stats {
    font-size: 1rem;
    color: #475569;
    margin-bottom: 1rem;
  }
  .wordsearch-stats strong {
    color: #0d9488;
    font-size: 1.1rem;
  }
  .wordsearch-complete {
    background: #ecfdf5;
    border: 2px solid #22c55e;
    border-radius: 0.5rem;
    padding: 1rem;
    text-align: center;
    margin-top: 1rem;
  }
  .wordsearch-complete h3 {
    margin-top: 0;
    color: #16a34a;
  }
  .wordsearch-words {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 0.5rem;
  }
  .wordsearch-words h3 {
    font-size: 1rem;
    margin-top: 0;
    margin-bottom: 0.75rem;
    color: #334155;
  }
  .wordsearch-words ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.5rem;
  }
  .wordsearch-words li {
    font-size: 0.9rem;
    color: #475569;
  }
  .wordsearch-words li.found {
    color: #16a34a;
    text-decoration: line-through;
  }
  .wordsearch-grid {
    display: inline-block;
    border: 2px solid #334155;
    padding: 0.5rem;
    background: white;
    margin: 1rem 0;
  }
  .wordsearch-row {
    display: flex;
  }
  .wordsearch-cell {
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid #e2e8f0;
    background: #f8fafc;
    font-size: 1rem;
    font-weight: 600;
    color: #0f172a;
    cursor: pointer;
    transition: all 0.15s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .wordsearch-cell:hover:not(:disabled) {
    background: #e0e7ff;
    border-color: #6366f1;
  }
  .wordsearch-cell.selected {
    background: #dbeafe;
    border-color: #3b82f6;
  }
  .wordsearch-cell.found {
    background: #d1fae5;
    border-color: #22c55e;
    color: #065f46;
    cursor: default;
  }
  .wordsearch-cell:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
  .game-instructions {
    font-size: 0.9rem;
    color: #64748b;
    text-align: center;
    margin-top: 1rem;
  }
  @media (max-width: 640px) {
    .wordsearch-cell {
      width: 2rem;
      height: 2rem;
      font-size: 0.85rem;
    }
    .wordsearch-words ul {
      grid-template-columns: 1fr;
    }
  }
</style>
